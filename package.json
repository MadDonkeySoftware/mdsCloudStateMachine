{
  "name": "mds-cloud-state-machine",
  "version": "1.0.0",
  "description": "A StepFunctions-like implementation for use with any FaaS",
  "repository": {
    "url": "https://github.com/MadDonkeySoftware/mdsCloudStateMachine"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf ./dist",
    "dev:server": "NODE_ENV=localdev ts-node-dev --respawn --pretty --transpile-only src/presentation/server.ts",
    "dev:worker": "NODE_ENV=localdev ts-node-dev --respawn --pretty --transpile-only src/worker/entry-point.ts",
    "test": "NODE_ENV=test jest",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint 'src/**'",
    "pretty-check": "prettier -c ./src",
    "pretty": "prettier -w ./src"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/awilix": "^3.1.0",
    "@fastify/swagger": "^8.8.0",
    "@fastify/swagger-ui": "^1.9.3",
    "@fastify/type-provider-typebox": "^3.3.0",
    "@maddonkeysoftware/mds-cloud-sdk-node": "0.2.11",
    "@maddonkeysoftware/orid-node": "0.1.2",
    "@sinclair/typebox": "^0.29.6",
    "awilix": "^8.0.1",
    "config": "^3.3.9",
    "fastify": "^4.20.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mds-log-pump": "^0.0.6",
    "mongodb": "^5.7.0",
    "pino": "^9.6.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/config": "^3.3.0",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/luxon": "^3.4.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "form-auto-content": "^3.2.0",
    "jest": "^29.6.1",
    "pino-pretty": "^10.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
