{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDatasources": ["npm"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": ["eslint"],
      "allowedVersions": "^8.0.0"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}